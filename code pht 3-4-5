using System;

namespace Constructor
{
    class Product
    {
        public string ProductId;
        public string ProductName;
        public decimal Price;
        
        // Constructor
        public Product(string productId, string productName, decimal price)
        {
            ProductId = productId;
            ProductName = productName;
            Price = price;
        }
        
        // Th√™m ph∆∞∆°ng th·ª©c hi·ªÉn th·ªã
        public void Display()
        {
            Console.WriteLine($"üõí M√£: {ProductId} | T√™n: {ProductName} | Gi√°: {Price:N0} VND");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("üõçÔ∏è DANH S√ÅCH S·∫¢N PH·∫®M");
            Console.WriteLine(new string('=', 50));
            
            Product laptop = new Product("P001", "Laptop Dell XPS", 25000000);
            Product phone = new Product("P002", "iPhone 15 Pro", 28000000);
            Product tablet = new Product("P003", "iPad Pro", 18000000);
            
            laptop.Display();
            phone.Display();
            tablet.Display();
        }
    }
}
//todo 5.3
using System;

namespace Encapsulation
{
    class BankAccount
    {
        private decimal _balance;
        private string _accountNumber;
        
        public decimal Balance
        {
            get { return _balance; }
        }
        
        public string AccountNumber
        {
            get { return _accountNumber; }
        }
        
        // Constructor
        public BankAccount(string accountNumber, decimal initialBalance)
        {
            _accountNumber = accountNumber;
            _balance = initialBalance;
        }
        
        public void Deposit(decimal amount)
        {
            if (amount > 0)
            {
                _balance += amount;
                Console.WriteLine($"‚úÖ ƒê√£ g·ª≠i: {amount:N0} VND");
                Console.WriteLine($"üí∞ S·ªë d∆∞ m·ªõi: {_balance:N0} VND");
            }
            else
            {
                Console.WriteLine("‚ùå S·ªë ti·ªÅn g·ª≠i ph·∫£i l·ªõn h∆°n 0");
            }
        }
        
        public void Withdraw(decimal amount)
        {
            if (amount <= 0)
            {
                Console.WriteLine("‚ùå S·ªë ti·ªÅn r√∫t ph·∫£i l·ªõn h∆°n 0");
            }
            else if (amount > _balance)
            {
                Console.WriteLine($"‚ùå Kh√¥ng ƒë·ªß ti·ªÅn. S·ªë d∆∞ hi·ªán t·∫°i: {_balance:N0} VND");
            }
            else
            {
                _balance -= amount;
                Console.WriteLine($"‚úÖ ƒê√£ r√∫t: {amount:N0} VND");
                Console.WriteLine($"üí∞ S·ªë d∆∞ m·ªõi: {_balance:N0} VND");
            }
        }
        
        public void DisplayInfo()
        {
            Console.WriteLine($"üè¶ S·ªë t√†i kho·∫£n: {_accountNumber}");
            Console.WriteLine($"üí∞ S·ªë d∆∞: {_balance:N0} VND");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("üè¶ QU·∫¢N L√ù T√ÄI KHO·∫¢N NG√ÇN H√ÄNG");
            Console.WriteLine(new string('=', 40));
            
            BankAccount account = new BankAccount("123456789", 1000000);
            account.DisplayInfo();
            
            Console.WriteLine("\n--- Giao d·ªãch ---");
            account.Deposit(500000);
            account.Withdraw(200000);
            account.Withdraw(2000000); // Th·ª≠ r√∫t qu√° s·ªë d∆∞
            
            Console.WriteLine("\n--- Th√¥ng tin cu·ªëi c√πng ---");
            account.DisplayInfo();
        }
    }
}
//todo 5.4
using System;

namespace Inheritance
{
    class Animal
    {
        public string Name;
        public int Age;
        
        public Animal(string name, int age)
        {
            Name = name;
            Age = age;
        }
        
        public virtual void MakeSound()
        {
            Console.WriteLine($"{Name} (tu·ªïi: {Age}) k√™u: Animal makes a sound");
        }
        
        public void Eat()
        {
            Console.WriteLine($"{Name} ƒëang ƒÉn...");
        }
    }
    
    class Dog : Animal
    {
        public string Breed;
        
        public Dog(string name, int age, string breed) : base(name, age)
        {
            Breed = breed;
        }
        
        public override void MakeSound()
        {
            Console.WriteLine($"{Name} ({Breed}, tu·ªïi: {Age}) s·ªßa: Woof! Woof!");
        }
        
        public void WagTail()
        {
            Console.WriteLine($"{Name} ƒëang v·∫´y ƒëu√¥i...");
        }
    }
    
    class Cat : Animal
    {
        public Cat(string name, int age) : base(name, age) { }
        
        public override void MakeSound()
        {
            Console.WriteLine($"{Name} (tu·ªïi: {Age}) k√™u: Meow! Meow!");
        }
        
        public void ClimbTree()
        {
            Console.WriteLine($"{Name} ƒëang tr√®o c√¢y...");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("üêæ M√î PH·ªéNG ƒê·ªòNG V·∫¨T");
            Console.WriteLine(new string('=', 30));
            
            Animal genericAnimal = new Animal("ƒê·ªông v·∫≠t chung", 3);
            Dog myDog = new Dog("Buddy", 2, "Golden Retriever");
            Cat myCat = new Cat("Kitty", 1);
            
            Console.WriteLine("\n=== H√ÄNH ƒê·ªòNG C·ª¶A ƒê·ªòNG V·∫¨T ===");
            
            Console.WriteLine("\n1. ƒê·ªông v·∫≠t chung:");
            genericAnimal.MakeSound();
            genericAnimal.Eat();
            
            Console.WriteLine("\n2. Ch√≥:");
            myDog.MakeSound();
            myDog.Eat();
            myDog.WagTail();
            
            Console.WriteLine("\n3. M√®o:");
            myCat.MakeSound();
            myCat.Eat();
            myCat.ClimbTree();
            
            Console.WriteLine("\n=== POLYMORPHISM DEMO ===");
            Console.WriteLine("G·ªçi MakeSound() th√¥ng qua tham chi·∫øu Animal:");
            
            Animal[] animals = { genericAnimal, myDog, myCat };
            
            foreach (Animal animal in animals)
            {
                animal.MakeSound(); // ƒêa h√¨nh - m·ªói lo·∫°i k√™u kh√°c nhau
            }
        }
    }
