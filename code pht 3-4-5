//todo 3.1
using System;

namespace GradeClassification
{
    class Program
    {
        static void Main(string[] args)
        {
            // Nh·∫≠p ƒëi·ªÉm
            Console.Write("Nh·∫≠p ƒëi·ªÉm (0-100): ");
            int score = Convert.ToInt32(Console.ReadLine());
            
            // Ph√¢n lo·∫°i ƒëi·ªÉm
            string grade = "";
            string evaluation = "";
            
            if (score >= 90 && score <= 100)
            {
                grade = "A";
                evaluation = "Xu·∫•t s·∫Øc";
            }
            else if (score >= 80 && score <= 89)
            {
                grade = "B";
                evaluation = "Kh√°";
            }
            else if (score >= 70 && score <= 79)
            {
                grade = "C";
                evaluation = "Trung b√¨nh";
            }
            else if (score >= 60 && score <= 69)
            {
                grade = "D";
                evaluation = "Y·∫øu";
            }
            else if (score >= 0 && score < 60)
            {
                grade = "F";
                evaluation = "Kh√¥ng ƒë·∫°t";
            }
            else
            {
                grade = "Kh√¥ng h·ª£p l·ªá";
                evaluation = "ƒêi·ªÉm ph·∫£i t·ª´ 0-100";
            }
            
            // In k·∫øt qu·∫£
            Console.WriteLine($"ƒêi·ªÉm: {score}");
            Console.WriteLine($"X·∫øp lo·∫°i: {grade}");
            Console.WriteLine($"ƒê√°nh gi√°: {evaluation}");
        }
    }
}
//todo 3.2
using System;

namespace DayOfWeek
{
    class Program
    {
        static void Main(string[] args)
        {
            // Nh·∫≠p s·ªë ng√†y
            Console.Write("Nh·∫≠p s·ªë ng√†y (1-7): ");
            int day = Convert.ToInt32(Console.ReadLine());
            
            // D√πng switch ƒë·ªÉ in t√™n ng√†y
            string dayName;
            
            switch (day)
            {
                case 1:
                    dayName = "Th·ª© Hai";
                    break;
                case 2:
                    dayName = "Th·ª© Ba";
                    break;
                case 3:
                    dayName = "Th·ª© T∆∞";
                    break;
                case 4:
                    dayName = "Th·ª© NƒÉm";
                    break;
                case 5:
                    dayName = "Th·ª© S√°u";
                    break;
                case 6:
                    dayName = "Th·ª© B·∫£y";
                    break;
                case 7:
                    dayName = "Ch·ªß Nh·∫≠t";
                    break;
                default:
                    dayName = "Ng√†y kh√¥ng h·ª£p l·ªá";
                    break;
            }
            
            Console.WriteLine($"S·ªë ng√†y: {day}");
            Console.WriteLine($"K·∫øt qu·∫£: {dayName}");
        }
    }
}
//todo 3.3
using System;

namespace SumCalculation
{
    class Program
    {
        static void Main(string[] args)
        {
            // T√≠nh t·ªïng c√°c s·ªë t·ª´ 1 ƒë·∫øn 100
            int sum = 0;
            
            for (int i = 1; i <= 100; i++)
            {
                sum += i;
            }
            
            // In k·∫øt qu·∫£
            Console.WriteLine($"T·ªïng c√°c s·ªë t·ª´ 1 ƒë·∫øn 100: {sum}");
            
            // C√¥ng th·ª©c to√°n h·ªçc ƒë·ªÉ ki·ªÉm tra
            int sumByFormula = 100 * (100 + 1) / 2;
            Console.WriteLine($"Ki·ªÉm tra b·∫±ng c√¥ng th·ª©c: {sumByFormula}");
        }
    }
}
//todo 3.4
using System;

namespace GuessNumber
{
    class Program
    {
        static void Main(string[] args)
        {
            int secretNumber = 50;
            bool isCorrect = false;
            int guessCount = 0;
            int maxGuesses = 3;
            
            Console.WriteLine("Ch√†o m·ª´ng ƒë·∫øn v·ªõi tr√≤ ch∆°i ƒêO√ÅN S·ªê!");
            Console.WriteLine($"B·∫°n c√≥ {maxGuesses} l·∫ßn ƒëo√°n. S·ªë b√≠ m·∫≠t n·∫±m trong kho·∫£ng 1-100.");
            
            while (!isCorrect && guessCount < maxGuesses)
            {
                guessCount++;
                Console.Write($"\nL·∫ßn ƒëo√°n th·ª© {guessCount}: ");
                
                // Gi·∫£ l·∫≠p 3 l·∫ßn ƒëo√°n: 40, 60, 50
                int guess;
                if (guessCount == 1)
                    guess = 40;
                else if (guessCount == 2)
                    guess = 60;
                else
                    guess = 50;
                
                Console.WriteLine(guess); // In ra s·ªë ƒë√£ ch·ªçn
                
                if (guess == secretNumber)
                {
                    Console.WriteLine("üéâ Ch√≠nh x√°c!");
                    Console.WriteLine($"B·∫°n ƒë√£ ƒëo√°n ƒë√∫ng sau {guessCount} l·∫ßn!");
                    isCorrect = true;
                }
                else if (guess < secretNumber)
                {
                    Console.WriteLine("‚¨ÜÔ∏è Qu√° th·∫•p! Th·ª≠ s·ªë l·ªõn h∆°n.");
                }
                else
                {
                    Console.WriteLine("‚¨áÔ∏è Qu√° cao! Th·ª≠ s·ªë nh·ªè h∆°n.");
                }
            }
            
            if (!isCorrect)
            {
                Console.WriteLine("\nüíÄ H·∫øt l∆∞·ª£t ƒëo√°n!");
                Console.WriteLine($"S·ªë b√≠ m·∫≠t l√†: {secretNumber}");
            }
        }
    }
}
//todo 3.5
using System;

namespace ForeachExample
{
    class Program
    {
        static void Main(string[] args)
        {
            // T·∫°o m·∫£ng t√™n c√°c b·∫°n
            string[] friends = { "Mai", "B√¨nh", "Chi", "Danh" };

            // In danh s√°ch b·∫°n b√® d√πng foreach
            Console.WriteLine("üìã DANH S√ÅCH B·∫†N B√à");
            Console.WriteLine(new string('=', 20));
            
            int index = 1;
            foreach (string friend in friends)
            {
                Console.WriteLine($"{index}. {friend}");
                index++;
            }
        }
    }
}
//todo 3.6
using System;

namespace BreakContinue
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("üî¢ IN C√ÅC S·ªê L·∫∫ T·ª™ 1 ƒê·∫æN 20 (D√ôNG CONTINUE)");
            Console.WriteLine(new string('=', 45));
            
            // In c√°c s·ªë l·∫ª t·ª´ 1 ƒë·∫øn 20 (d√πng continue)
            for (int i = 1; i <= 20; i++)
            {
                if (i % 2 == 0)
                {
                    continue;
                }
                Console.Write($"{i} ");
            }
            
            Console.WriteLine("\n");
            Console.WriteLine(new string('-', 50));
            Console.WriteLine("\nüîç T√åM S·ªê 7 TRONG M·∫¢NG (D√ôNG BREAK)");
            Console.WriteLine(new string('=', 45));
            
            // T√¨m s·ªë 7 trong m·∫£ng [2, 5, 7, 1, 9, 7, 3]
            int[] numbers = { 2, 5, 7, 1, 9, 7, 3 };
            
            Console.WriteLine("M·∫£ng s·ªë: [" + string.Join(", ", numbers) + "]");
            Console.WriteLine("B·∫Øt ƒë·∫ßu t√¨m ki·∫øm...\n");
            
            bool found = false;
            for (int i = 0; i < numbers.Length; i++)
            {
                Console.WriteLine($"   ƒêang ki·ªÉm tra v·ªã tr√≠ {i}: s·ªë {numbers[i]}");
                
                if (numbers[i] == 7)
                {
                    Console.WriteLine($"\n‚úÖ T√¨m th·∫•y s·ªë 7 t·∫°i v·ªã tr√≠ {i}!");
                    Console.WriteLine("   D·ª´ng t√¨m ki·∫øm...");
                    found = true;
                    break;
                }
            }
            
            if (!found)
            {
                Console.WriteLine("‚ùå Kh√¥ng t√¨m th·∫•y s·ªë 7 trong m·∫£ng");
            }
        }
    }
}
//todo 4.1
using System;

namespace BasicMethods
{
    class Program
    {
        static int Add(int a, int b)
        {
            return a + b;
        }
        
        static double Multiply(double x, double y)
        {
            return x * y;
        }
        
        static void Main(string[] args)
        {
            Console.WriteLine("üî¢ PH∆Ø∆†NG TH·ª®C T√çNH TO√ÅN C∆† B·∫¢N");
            Console.WriteLine(new string('=', 40));
            
            int sum = Add(15, 27);
            Console.WriteLine($"T·ªïng c·ªßa 15 v√† 27 l√†: {sum}");
            
            double product = Multiply(4.5, 3.2);
            Console.WriteLine($"T√≠ch c·ªßa 4.5 v√† 3.2 l√†: {product:F2}");
            
            double product2 = Multiply(7, 8.5);
            Console.WriteLine($"T√≠ch c·ªßa 7 v√† 8.5 l√†: {product2:F2}");
            
            Console.WriteLine(new string('-', 40));
            Console.WriteLine("K·∫øt h·ª£p ph∆∞∆°ng th·ª©c:");
            
            int a = 10;
            int b = 20;
            double x = 2.5;
            double y = 4.0;
            
            int sumResult = Add(a, b);
            double multiplyResult = Multiply(x, y);
            
            Console.WriteLine($"{a} + {b} = {sumResult}");
            Console.WriteLine($"{x} √ó {y} = {multiplyResult:F2}");
        }
    }
}
