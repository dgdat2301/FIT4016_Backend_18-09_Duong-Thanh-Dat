using System;

namespace VoidMethods
{
    class Program
    {
        static void PrintBox(string text)
        {
            int boxLength = text.Length + 8;
            
            Console.WriteLine(new string('*', boxLength));
            Console.WriteLine($"*   {text}   *");
            Console.WriteLine(new string('*', boxLength));
            Console.WriteLine();
        }
        
        static void Main(string[] args)
        {
            Console.WriteLine("üéÅ PH∆Ø∆†NG TH·ª®C VOID - IN H·ªòP TRANG TR√ç");
            Console.WriteLine(new string('=', 40));
            
            Console.WriteLine("H·ªôp trang tr√≠ c∆° b·∫£n:");
            PrintBox("Hello");
            PrintBox("Welcome");
            PrintBox("C# Programming");
            
            Console.WriteLine(new string('=', 40));
            Console.WriteLine("\nH·ªôp trang tr√≠ ƒë·∫∑c bi·ªát:");
            
            PrintBox("Ch√∫c m·ª´ng!");
            PrintBox("Th√†nh c√¥ng");
            PrintBox("Happy Coding!");
        }
    }
}
//todo 4.3
using System;

namespace ArrayMethods
{
    class Program
    {
        static int SumArray(int[] numbers)
        {
            int sum = 0;
            foreach (int num in numbers)
            {
                sum += num;
            }
            return sum;
        }
        
        static int FindMax(int[] numbers)
        {
            if (numbers.Length == 0)
            {
                return 0;
            }
            
            int max = numbers[0];
            for (int i = 1; i < numbers.Length; i++)
            {
                if (numbers[i] > max)
                {
                    max = numbers[i];
                }
            }
            return max;
        }
        
        static void Main(string[] args)
        {
            int[] scores = { 85, 92, 78, 90, 88 };
            
            Console.WriteLine("üìä PH∆Ø∆†NG TH·ª®C V·ªöI M·∫¢NG");
            Console.WriteLine(new string('=', 40));
            
            Console.WriteLine("M·∫£ng ƒëi·ªÉm s·ªë: [" + string.Join(", ", scores) + "]");
            Console.WriteLine();
            
            int total = SumArray(scores);
            Console.WriteLine($"üìà T·ªïng c√°c ph·∫ßn t·ª≠: {total}");
            
            int maxScore = FindMax(scores);
            Console.WriteLine($"üèÜ ƒêi·ªÉm cao nh·∫•t: {maxScore}");
            
            // Th√™m t√≠nh trung b√¨nh
            double average = (double)total / scores.Length;
            Console.WriteLine($"üìä ƒêi·ªÉm trung b√¨nh: {average:F2}");
        }
    }
}
//todo 4.4
using System;

namespace MethodOverloading
{
    class Program
    {
        static void Print(int x)
        {
            Console.WriteLine($"üìä S·ªë nguy√™n: {x}");
        }
        
        static void Print(string text)
        {
            Console.WriteLine($"üìù Chu·ªói: \"{text}\"");
        }
        
        static int Add(int a, int b)
        {
            int result = a + b;
            Console.WriteLine($"üßÆ {a} + {b} = {result} (s·ªë nguy√™n)");
            return result;
        }
        
        static double Add(double a, double b)
        {
            double result = a + b;
            Console.WriteLine($"üßÆ {a:F2} + {b:F2} = {result:F2} (s·ªë th·ª±c)");
            return result;
        }
        
        static void Main(string[] args)
        {
            Console.WriteLine("üéØ N·∫†P CH·ªíNG PH∆Ø∆†NG TH·ª®C (OVERLOADING)");
            Console.WriteLine(new string('=', 50));
            
            Console.WriteLine("\n1Ô∏è‚É£ PH∆Ø∆†NG TH·ª®C PRINT:");
            Console.WriteLine(new string('-', 30));
            
            Console.WriteLine("G·ªçi Print(42):");
            Print(42);
            
            Console.WriteLine("\nG·ªçi Print(\"Hello C#\"):");
            Print("Hello C#");
            
            Console.WriteLine("\n" + new string('=', 50));
            Console.WriteLine("\n2Ô∏è‚É£ PH∆Ø∆†NG TH·ª®C ADD:");
            Console.WriteLine(new string('-', 30));
            
            Console.WriteLine("G·ªçi Add(10, 20):");
            int intResult = Add(10, 20);
            
            Console.WriteLine("\nG·ªçi Add(3.14, 2.86):");
            double doubleResult = Add(3.14, 2.86);
            
            // Th√™m v√≠ d·ª•
            Console.WriteLine("\n3Ô∏è‚É£ V√ç D·ª§ KH√ÅC:");
            Console.WriteLine(new string('-', 30));
            
            Print(100);
            Print("N·∫°p ch·ªìng ph∆∞∆°ng th·ª©c");
            Add(25, 75);
            Add(5.5, 4.5);
        }
    }
}
//todo 4.5
using System;

namespace Recursion
{
    class Program
    {
        static long Factorial(int n)
        {
            if (n == 0 || n == 1)
            {
                Console.WriteLine($"  ƒêi·ªÅu ki·ªán d·ª´ng: {n}! = 1");
                return 1;
            }
            
            Console.WriteLine($"  T√≠nh {n}! = {n} √ó ({n-1}!)");
            long result = n * Factorial(n - 1);
            Console.WriteLine($"  ƒê√£ t√≠nh xong: {n}! = {result}");
            return result;
        }
        
        // Phi√™n b·∫£n ƒë∆°n gi·∫£n kh√¥ng c√≥ debug
        static long FactorialSimple(int n)
        {
            return n <= 1 ? 1 : n * FactorialSimple(n - 1);
        }
        
        static void Main(string[] args)
        {
            Console.WriteLine("üåÄ ƒê·ªÜ QUY - T√çNH GIAI TH·ª™A");
            Console.WriteLine(new string('=', 40));
            
            Console.WriteLine("\n1Ô∏è‚É£ T√≠nh 5! (giai th·ª´a c·ªßa 5):");
            Console.WriteLine(new string('-', 30));
            
            long factorial5 = Factorial(5);
            Console.WriteLine($"\n‚úÖ K·∫øt qu·∫£: 5! = {factorial5}");
            
            Console.WriteLine("\n" + new string('=', 40));
            Console.WriteLine("\n2Ô∏è‚É£ T√≠nh 10! (giai th·ª´a c·ªßa 10):");
            Console.WriteLine(new string('-', 30));
            
            long factorial10 = FactorialSimple(10);
            Console.WriteLine($"\n‚úÖ K·∫øt qu·∫£: 10! = {factorial10:N0}");
            
            Console.WriteLine("\n" + new string('=', 40));
            Console.WriteLine("\n3Ô∏è‚É£ C√ÅC GI√Å TR·ªä GIAI TH·ª™A KH√ÅC:");
            Console.WriteLine(new string('-', 30));
            
            for (int i = 0; i <= 6; i++)
            {
                Console.WriteLine($"  {i}! = {FactorialSimple(i)}");
            }
        }
    }
}
